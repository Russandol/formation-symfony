{% extends 'account/base_account.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <h1>Posts</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ post.content }}</td>
        </tr>
        <tr>
            <th>Picture</th>
            <td>{{ post.picture }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('account_posts_index') }}">back to list</a>

    <a href="{{ path('account_posts_edit', {'id': post.id}) }}">edit</a>

    {{ include('account/posts/_delete_form.html.twig') }}
{% endblock %}