{% extends 'admin/base_admin.html.twig' %}

{% block title %}Posts index{% endblock %}

{% block body %}
    <h1>Posts index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>User email</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content|raw }}</td>
                <td>{{ post.fkUser.email ?? post.fkTeam.email }}</td>
                <td>
                    <a href="{{ path('admin_posts_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('admin_posts_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_posts_new') }}">Create new</a>
{% endblock %}