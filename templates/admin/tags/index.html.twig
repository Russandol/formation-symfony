{% extends 'admin/base_admin.html.twig' %}

{% block title %}Tags index{% endblock %}

{% block body %}
    <h1>Tags index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.title }}</td>
                <td>
                    <a href="{{ path('admin_tags_show', {'id': tag.id}) }}">show</a>
                    <a href="{{ path('admin_tags_edit', {'id': tag.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_tag_new') }}">Create new</a>
{% endblock %}